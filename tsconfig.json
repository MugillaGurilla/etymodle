{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    // "src/scripts/**/*.ts",
    "src/**/*.ts",
    "src/**/*.json",
    "src/**/*.sh",
    // "src/helpers/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}