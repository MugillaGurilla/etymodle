{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "scripts/**/*.ts",
    "src/**/*.ts",
    "src/**/*.json",
    "helpers/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}