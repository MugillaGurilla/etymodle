{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
  },
  "include": [
    "scripts/**/*.ts",
    "@src/**/*.ts",
    "helpers/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}